<!DOCTYPE html>
<html>
<head>
    <title>Party Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f4f6f8;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .card {
            border-radius: 12px;
        }
        .form-label {
            font-weight: 600;
        }
        table th {
            background-color: #007bff;
            color: white;
        }
        table td {
            vertical-align: middle;
        }
        .btn-sm {
            padding: 4px 10px;
            font-size: 0.85rem;
        }
        h3, h4 {
            font-weight: bold;
            color: #333;
        }
        .container {
            max-width: 1100px;
        }
    </style>
</head>
<body>

<div class="container mt-5">
    <div class="card p-4 shadow">
        <h3 class="text-center mb-4">Add Party</h3>

        <!-- Add User Form -->
        <form action="/users" method="POST" class="mb-4">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Party Name</label>
                    <input type="text" class="form-control" name="partyName" required>
                </div>
                <div class="col-md-6">
                    <label class="form-label">GSTIN</label>
                    <input type="text" class="form-control" name="gstin" required>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Address</label>
                <input type="text" class="form-control" name="address" required>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label class="form-label">Mobile</label>
                    <input type="text" class="form-control" name="mobile" required>
                </div>
                <div class="col-md-4">
                    <label class="form-label">PAN No</label>
                    <input type="text" class="form-control" name="panno" required>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" name="email">
                </div>
            </div>
            <div class="row">
                <div class="text-center col">
                    <button type="submit" class="btn btn-primary px-4">Save Party</button>
                </div>
                <div class="text-center col">
                    <button class="btn btn-primary px-4 "> <a href="/main" style="text-decoration: none; color: inherit;"> BACK </a></button>
                </div>
            </div>
            
        </form>

        <!-- Users Table -->
        <h4 class="mb-3">Existing Parties</h4>
        <div class="table-responsive">
            <table class="table table-bordered text-center align-middle">
                <thead>
                    <tr>
                        <th>Party Name</th>
                        <th>Address</th>
                        <th>GSTIN</th>
                        <th>Mobile</th>
                        <th>PAN</th>
                        <th>Email</th>
                        <th style="width: 150px;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (users.length === 0) { %>
                        <tr>
                            <td colspan="7" class="text-muted">No parties found</td>
                        </tr>
                    <% } else { %>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.partyName %></td>
                                <td><%= user.address %></td>
                                <td><%= user.gstin %></td>
                                <td><%= user.mobile %></td>
                                <td><%= user.panno %></td>
                                <td><%= user.email %></td>
                                <td>
                                    <a href="/users/edit/<%= user._id %>" class="btn btn-warning btn-sm">Edit</a>
                                    <a href="/users/delete/<%= user._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Delete this party?')">Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

</body>
</html>
